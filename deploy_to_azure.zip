#!/usr/bin/env python3
"""
ðŸ“¦ Create Azure Deployment Package

This creates a zip file with everything needed for Azure deployment.
"""

import zipfile
import os
import shutil

def create_deployment_package():
    """Create deployment package for Azure"""
    print("ðŸ“¦ Creating Azure deployment package...")
    
    # Files to include in deployment
    files_to_include = [
        'app_optimized.py',
        'ai_optimizer.py',
        'requirements.txt',
        'startup.py',
        'azure-web.config',
        'static/',
        'templates/'
    ]
    
    # Create zip file
    with zipfile.ZipFile('azure_deployment.zip', 'w', zipfile.ZIP_DEFLATED) as zipf:
        for item in files_to_include:
            if os.path.isfile(item):
                zipf.write(item)
                print(f"âœ… Added {item}")
            elif os.path.isdir(item):
                for root, dirs, files in os.walk(item):
                    for file in files:
                        file_path = os.path.join(root, file)
                        zipf.write(file_path)
                print(f"âœ… Added {item} directory")
    
    print("ðŸŽ‰ Deployment package created: azure_deployment.zip")
    print("\nðŸš€ Next steps:")
    print("1. Go to https://portal.azure.com")
    print("2. Create a Web App")
    print("3. Upload azure_deployment.zip")
    print("4. Set environment variables")
    print("5. Your AI system is live!")

if __name__ == "__main__":
    create_deployment_package() 